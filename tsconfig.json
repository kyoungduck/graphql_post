{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"strict": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"scripthost",
			"es2018",
			"esnext.asynciterable"
		],
		"rootDir": ".",
		"outDir": "./build_ts/",
		"baseUrl": "./src",
		"paths": {
			"~/*": [
				"*"
			],
			"@res/*": [
				"res/*"
			],
			"@gql/*": [
				"graphql/*"
			],
			"@models/*": [
				"models/*"
			],
			"@services/*": [
				"services/*"
			],
			"@errors/*": [
				"errors/*"
			],
			"@locales/*": [
				"locales/*"
			],
		},
		"types": [
			"node",
			"mocha"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/*"
	],
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true
}